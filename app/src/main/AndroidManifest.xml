<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/mcaprep_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/mcaprep_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MCAPREP"
        tools:targetApi="33">
        <activity
            android:name=".ui.activity.ResultActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.TestScreenActivity"
            android:exported="false"
            android:theme="@style/TestScreenTheme" />
        <activity
            android:name=".ui.activity.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.TestSeriesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.AuthActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="false" />
    </application>

</manifest>