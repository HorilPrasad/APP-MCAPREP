<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Playlist Header -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kotlin Basics"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 videos • 1h 25m • 40% completed"
                    android:textSize="14sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginTop="4dp" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="12dp"
                    app:progress="40"
                    app:trackColor="#E0E0E0"
                    app:indicatorColor="#3498DB" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Videos Section Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Videos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="16dp" />

        <!-- Video 1 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:background="#3498DB"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Introduction to Kotlin Programming"
                        android:textSize="16sp"
                        android:textColor="#2C3E50"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15:30"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="•"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45 MB"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                    </LinearLayout>

                </LinearLayout>

                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_outline_play_circle"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Play video"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Video 2 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:background="#27AE60"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Control Flow and Loops"
                        android:textSize="16sp"
                        android:textColor="#2C3E50"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18:45"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="•"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="55 MB"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WATCHED"
                        android:textSize="10sp"
                        android:textColor="#27AE60"
                        android:background="#E8F5E8"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_outline_play_circle"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Play video"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Video 3 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="3"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:background="#E74C3C"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Control Flow and Loops"
                        android:textSize="16sp"
                        android:textColor="#2C3E50"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18:45"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="•"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="55 MB"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEW"
                        android:textSize="10sp"
                        android:textColor="#E74C3C"
                        android:background="#FFEBEE"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_outline_play_circle"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Play video"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Video 4 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="4"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:background="#9B59B6"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Functions and Lambdas"
                        android:textSize="16sp"
                        android:textColor="#2C3E50"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25:20"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="•"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="78 MB"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                    </LinearLayout>

                </LinearLayout>

                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_download"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Download video"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Video 5 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="5"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:background="#F39C12"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Object-Oriented Programming in Kotlin"
                        android:textSize="16sp"
                        android:textColor="#2C3E50"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23:40"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="•"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85 MB"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                    </LinearLayout>

                    <!-- Download Progress -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Downloading 65%"
                                android:textSize="10sp"
                                android:textColor="#3498DB" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.2 MB/s"
                                android:textSize="10sp"
                                android:textColor="#7F8C8D" />

                        </LinearLayout>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="2dp"
                            app:progress="65"
                            app:trackColor="#E0E0E0"
                            app:indicatorColor="#3498DB" />

                    </LinearLayout>

                </LinearLayout>

                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_paused"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Pause download"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/primaryColor" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>