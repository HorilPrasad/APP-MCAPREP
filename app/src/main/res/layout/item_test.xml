<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/test_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_medium"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        android:background="@color/white">

        <!-- Test Icon with Status Badge -->
        <FrameLayout
            android:layout_width="60dp"
            android:layout_gravity="center_vertical"
            android:layout_height="60dp"
            android:background="@drawable/icon_background1"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/test_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_math" />

            <TextView
                android:id="@+id/test_attempt_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:background="@drawable/badge_attempted"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:gravity="center"
                android:text="Attempted"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:textStyle="bold" />

        </FrameLayout>


        <!-- Test Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_medium">

            <!-- Test Name and Difficulty Tag -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/test_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Practice test- 01"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />


            </LinearLayout>

            <!-- Question & Time Details -->
            <TextView
                android:id="@+id/test_question_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="19 Questions | 25 Minutes | Hard"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp" />



            <!-- Additional Info (Marks & Attempts) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/test_marks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="76 Marks"
                    android:textColor="@color/secondaryColor"
                    android:textSize="11sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/secondaryColor" />

                <TextView
                    android:id="@+id/test_attempt_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="329 Attempted"
                    android:textColor="@color/secondaryColor"
                    android:textSize="11sp" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Available Now"
                android:textColor="@color/lightGreen"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Start Button -->
        <TextView
            android:id="@+id/test_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_accent"
            android:padding="6dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/icon_outline_play_circle"
            android:drawableTint="@color/white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>