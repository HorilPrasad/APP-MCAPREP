<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFC">

    <!-- Header with Back Button -->
    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Study Materials"
        app:navigationIcon="@drawable/arrow_backward"
        app:titleTextColor="@android:color/white"
        android:background="#3498DB" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Search Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:padding="16dp"
                android:backgroundTint="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:startIconDrawable="@drawable/search"
                    app:startIconTint="#64748B">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Search study materials..."
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    app:icon="@drawable/filter_icon"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:strokeColor="#E2E8F0" />

            </LinearLayout>

            <!-- Quick Filters -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px">

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleLine="true"
                    app:chipSpacingHorizontal="8dp">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:checkable="true"
                        android:checked="true"
                        app:chipBackgroundColor="@color/accentColor"
                        app:chipStrokeColor="@color/white" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PDF"
                        android:checkable="true" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Videos"
                        android:checkable="true"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notes"
                        android:checkable="true"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quizzes"
                        android:checkable="true"/>

                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>

            <!-- Results Count -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="45 study materials found"
                android:textSize="14sp"
                android:textColor="#64748B"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Study Material 1 - PDF -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#E74C3C"
                        android:gravity="center"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/icon_pdf"
                            android:contentDescription="PDF" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Advanced Calculus Formulas"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:maxLines="2"
                            android:ellipsize="end" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Complete guide to advanced calculus formulas and theorems"
                            android:textSize="13sp"
                            android:textColor="#64748B"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="2dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mathematics"
                                android:textSize="11sp"
                                android:textColor="#3498DB"
                                android:background="#E3F2FD"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Advanced"
                                android:textSize="11sp"
                                android:textColor="#E74C3C"
                                android:background="#FFEBEE"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="2dp"
                                android:layout_marginStart="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2.4 MB"
                                android:textSize="11sp"
                                android:textColor="#27AE60"
                                android:background="#E8F5E8"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="2dp"
                                android:layout_marginStart="6dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="6dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/clock_outline"
                                app:tint="#94A3B8" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 days ago"
                                android:textSize="11sp"
                                android:textColor="#94A3B8"
                                android:layout_marginStart="4dp" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/icon_download"
                                android:layout_marginStart="12dp"
                                app:tint="#94A3B8" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="245 downloads"
                                android:textSize="11sp"
                                android:textColor="#94A3B8"
                                android:layout_marginStart="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_download"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Download"
                            app:tint="#3498DB" />



                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Study Material 2 - Video -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#3498DB"
                        android:gravity="center"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/icon_play_circle_outline_24"
                            android:contentDescription="Video"
                            app:tint="#FFFFFF" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Physics - Quantum Mechanics"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:maxLines="2"
                            android:ellipsize="end" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Complete video lecture on quantum mechanics principles"
                            android:textSize="13sp"
                            android:textColor="#64748B"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="2dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Physics"
                                android:textSize="11sp"
                                android:textColor="#3498DB"
                                android:background="#E3F2FD"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Intermediate"
                                android:textSize="11sp"
                                android:textColor="#E74C3C"
                                android:background="#FFEBEE"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="2dp"
                                android:layout_marginStart="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45:30"
                                android:textSize="11sp"
                                android:textColor="#27AE60"
                                android:background="#E8F5E8"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="2dp"
                                android:layout_marginStart="6dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="6dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/clock_outline"
                                app:tint="#94A3B8" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 week ago"
                                android:textSize="11sp"
                                android:textColor="#94A3B8"
                                android:layout_marginStart="4dp" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/icon_outline_play_circle"
                                android:layout_marginStart="12dp"
                                app:tint="#94A3B8" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.2K views"
                                android:textSize="11sp"
                                android:textColor="#94A3B8"
                                android:layout_marginStart="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_outline_play_circle"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Play"
                            app:tint="#3498DB" />



                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Study Material 3 - Notes -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#27AE60"
                        android:gravity="center"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/icon_no_tests"
                            android:contentDescription="Notes"
                            app:tint="#FFFFFF" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Organic Chemistry Reactions"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:maxLines="2"
                            android:ellipsize="end" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Comprehensive notes on organic chemistry reactions and mechanisms"
                            android:textSize="13sp"
                            android:textColor="#64748B"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="2dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chemistry"
                                android:textSize="11sp"
                                android:textColor="#3498DB"
                                android:background="#E3F2FD"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Beginner"
                                android:textSize="11sp"
                                android:textColor="#E74C3C"
                                android:background="#FFEBEE"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="2dp"
                                android:layout_marginStart="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.8 MB"
                                android:textSize="11sp"
                                android:textColor="#27AE60"
                                android:background="#E8F5E8"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="2dp"
                                android:layout_marginStart="6dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="6dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/clock_outline"
                                app:tint="#94A3B8" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 days ago"
                                android:textSize="11sp"
                                android:textColor="#94A3B8"
                                android:layout_marginStart="4dp" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/icon_download"
                                android:layout_marginStart="12dp"
                                app:tint="#94A3B8" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="189 downloads"
                                android:textSize="11sp"
                                android:textColor="#94A3B8"
                                android:layout_marginStart="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_download"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Download"
                            app:tint="#3498DB" />



                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Study Material 4 - Quiz -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#9B59B6"
                        android:gravity="center"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/icon_question"
                            android:contentDescription="Quiz"
                            app:tint="#FFFFFF" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Biology - Cell Structure Quiz"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:maxLines="2"
                            android:ellipsize="end" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Test your knowledge with this interactive quiz on cell biology"
                            android:textSize="13sp"
                            android:textColor="#64748B"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="2dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Biology"
                                android:textSize="11sp"
                                android:textColor="#3498DB"
                                android:background="#E3F2FD"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Intermediate"
                                android:textSize="11sp"
                                android:textColor="#E74C3C"
                                android:background="#FFEBEE"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="2dp"
                                android:layout_marginStart="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25 Questions"
                                android:textSize="11sp"
                                android:textColor="#27AE60"
                                android:background="#E8F5E8"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="2dp"
                                android:layout_marginStart="6dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="6dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/clock_outline"
                                app:tint="#94A3B8" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 days ago"
                                android:textSize="11sp"
                                android:textColor="#94A3B8"
                                android:layout_marginStart="4dp" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/icon_peoples"
                                android:layout_marginStart="12dp"
                                app:tint="#94A3B8" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="542 attempts"
                                android:textSize="11sp"
                                android:textColor="#94A3B8"
                                android:layout_marginStart="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_outline_play_circle"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Start Quiz"
                            app:tint="#3498DB" />



                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Study Material 5 - PDF -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#E74C3C"
                        android:gravity="center"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/icon_pdf"
                            android:contentDescription="PDF"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Computer Science Algorithms"
                            android:textSize="16sp"
                            android:textStyle="bold"
