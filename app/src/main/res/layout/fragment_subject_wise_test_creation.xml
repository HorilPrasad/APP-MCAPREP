<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/padding_medium"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_backward"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Subject Test Creation"
            android:textAlignment="center"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/padding_medium" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:padding="@dimen/padding_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Practice based on the selected subjects"
                android:textColor="@color/secondaryColor"
                android:textSize="14sp"
                android:textAlignment="center"
                android:paddingVertical="@dimen/padding_medium" />

            <!-- Subjects Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_medium"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Subjects"
                        android:textColor="@color/primaryColor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/padding_medium" />

                    <!-- Subjects Dropdown -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:backgroundTint="@color/lightPrimaryColor"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/padding_medium">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Select Subjects"
                                android:textColor="@color/primaryColor"
                                android:textSize="14sp"
                                android:id="@+id/tv_subjects_selected" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_arrow_drop_down_24"
                                app:tint="@color/primaryColor" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Duration Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_medium"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration"
                        android:textColor="@color/primaryColor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/padding_medium" />

                    <!-- Duration Options -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 30 Min -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_30_min"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/padding_small"
                            android:backgroundTint="@color/accentColor"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="30 Min"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                        <!-- 60 Min -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_60_min"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="@dimen/padding_small"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="60 Min"
                                android:textColor="@color/primaryColor"
                                android:textSize="14sp" />

                        </androidx.cardview.widget.CardView>

                        <!-- 90 Min -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_90_min"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/padding_small"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="90 Min"
                                android:textColor="@color/primaryColor"
                                android:textSize="14sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Difficulty Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_medium"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Difficulty"
                        android:textColor="@color/primaryColor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/padding_medium" />

                    <!-- Difficulty Options -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Easy -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_easy"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/padding_small"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Easy"
                                android:textColor="@color/primaryColor"
                                android:textSize="14sp" />

                        </androidx.cardview.widget.CardView>

                        <!-- Medium -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_medium"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="@dimen/padding_small"
                            android:backgroundTint="@color/accentColor"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Medium"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                        <!-- Hard -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_hard"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/padding_small"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Hard"
                                android:textColor="@color/primaryColor"
                                android:textSize="14sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Question Count Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_medium"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Question Count"
                        android:textColor="@color/primaryColor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/padding_medium" />

                    <!-- Question Count Dropdown -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:backgroundTint="@color/lightPrimaryColor"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/padding_medium">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="25"
                                android:textColor="@color/primaryColor"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:id="@+id/tv_question_count" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_arrow_drop_down_24"
                                app:tint="@color/primaryColor" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.cardview.widget.CardView>

                    <!-- Question Count Info -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recommended: 20-50 questions for best practice"
                        android:textColor="@color/secondaryColor"
                        android:textSize="12sp"
                        android:layout_marginTop="@dimen/padding_small" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Test Summary -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_large"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                android:id="@+id/card_test_summary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/lightPrimaryColor"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Test Summary"
                        android:textColor="@color/primaryColor"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/padding_small" />

                    <TextView
                        android:id="@+id/tv_test_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mathematics, Reasoning • 25 questions • 30 min • Medium difficulty"
                        android:textColor="@color/primaryColor"
                        android:textSize="12sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Prepare Test Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/padding_medium"
        android:elevation="8dp">

        <TextView
            android:id="@+id/btn_prepare_test"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button_primary"
            android:gravity="center"
            android:text="Prepare Test"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingHorizontal="@dimen/padding_medium" />

    </LinearLayout>

</LinearLayout>