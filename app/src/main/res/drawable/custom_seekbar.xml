<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background (unfilled track) -->
    <item android:id="@android:id/background"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- light gray background -->
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Progress (filled part) -->
    <item android:id="@android:id/progress"
        android:top="4dp"
        android:bottom="4dp">
        <clip>
            <shape android:shape="rectangle">
                <!-- ðŸ‘‡ beautiful gradient progress -->
                <gradient
                    android:startColor="#0067EE"
                    android:centerColor="#8C56E9"
                    android:endColor="#FF4081"
                    android:angle="0"/>
                <corners android:radius="4dp"/>
            </shape>
        </clip>
    </item>
</layer-list>
